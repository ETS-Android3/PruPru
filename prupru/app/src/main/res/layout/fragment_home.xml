<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F5F8"
    tools:context=".HomeFragment">

    <TextView
        android:id="@+id/txt_uid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:layout_marginTop="89dp"
        android:fontFamily="sans-serif-medium"
        android:text="000 님,"
        android:textColor="@color/black"
        android:textFontWeight="700"
        android:textSize="44sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="11dp"
        android:text="오늘도 올바른 분리배출로 지구를 구해주세요!"
        android:textColor="@color/black"
        android:textFontWeight="500"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/txt_uid"
        app:layout_constraintTop_toBottomOf="@+id/txt_uid" />

    <View
        android:id="@+id/view_reward"
        android:layout_width="330dp"
        android:layout_height="240dp"
        android:layout_marginTop="54dp"
        android:background="@drawable/button_background"
        android:elevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt2" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="17dp"
        android:elevation="8dp"
        android:fontFamily="sans-serif-medium"
        android:text="분리배출 현황"
        android:textColor="@color/white"
        android:textFontWeight="700"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/view_reward"
        app:layout_constraintTop_toBottomOf="@+id/view5" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:layout_marginTop="12dp"
        android:elevation="8dp"
        android:text="리워드"
        android:textColor="@color/white"
        android:textFontWeight="500"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/view_reward"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/txt_reward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="169dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="40dp"
        android:elevation="8dp"
        android:text="0"
        android:textColor="@color/white"
        android:textFontWeight="400"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/view_reward"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <View
        android:id="@+id/view_change"
        android:layout_width="330dp"
        android:layout_height="162dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_background_2"
        android:elevation="3dp"
        app:layout_constraintStart_toStartOf="@+id/view_reward"
        app:layout_constraintTop_toBottomOf="@+id/view_reward" />

    <ImageView
        android:id="@+id/image_check"
        android:layout_width="36sp"
        android:layout_height="36sp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="27dp"
        android:elevation="3dp"
        app:layout_constraintStart_toStartOf="@+id/view_change"
        app:layout_constraintTop_toTopOf="@+id/view_change"
        app:srcCompat="@drawable/img_check" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:elevation="3dp"
        android:fontFamily="sans-serif-medium"
        android:text="리워드 교환"
        android:textColor="@color/black"
        android:textFontWeight="700"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="@+id/image_check"
        app:layout_constraintTop_toBottomOf="@+id/image_check" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="28dp"
        android:elevation="3dp"
        android:text="향후 지원 예정"
        android:textColor="#565656"
        android:textFontWeight="400"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/view_change"
        app:layout_constraintStart_toStartOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <View
        android:id="@+id/view5"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/shape_circle"
        android:elevation="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="66dp"
        android:layout_height="60dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/home_box_background"
        android:elevation="8dp"
        android:gravity="center"
        android:text="페트"
        android:textAlignment="center"
        android:textColor="#B3E3E3"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/view_reward"
        app:layout_constraintStart_toStartOf="@+id/view_reward"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="66dp"
        android:layout_height="60dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/home_box_background"
        android:elevation="8dp"
        android:gravity="center"
        android:text="종이류"
        android:textAlignment="center"
        android:textColor="#B3E3E3"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/view_reward"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="66dp"
        android:layout_height="60dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/home_box_background"
        android:elevation="8dp"
        android:gravity="center"
        android:text="캔류"
        android:textAlignment="center"
        android:textColor="#B3E3E3"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/view_reward"
        app:layout_constraintEnd_toEndOf="@+id/view_reward"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:elevation="11dp"
        android:src="@drawable/img_recycle"
        app:layout_constraintBottom_toBottomOf="@+id/view5"
        app:layout_constraintEnd_toEndOf="@+id/view5"
        app:layout_constraintStart_toStartOf="@+id/view5"
        app:layout_constraintTop_toTopOf="@+id/view5" />

</androidx.constraintlayout.widget.ConstraintLayout>